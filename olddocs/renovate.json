{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "rebaseWhen": "conflicted",
    "schedule": [
        "before 6am on the first day of the month"
    ],
    "baseBranches": [
        "main"
    ],
    "rangeStrategy": "bump",
    "ignoreDeps": [
        "node",
        "pnpm"
    ],
    "packageRules": [
        {
            "groupName": "root",
            "matchFiles": [
                "package.json"
            ],
            "matchUpdateTypes": [
                "patch",
                "minor",
                "major"
            ],
            "labels": [
                "dependencies"
            ],
            "addLabels": [
                "dependencies"
            ]
        }
    ]
}